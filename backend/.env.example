# Database Configuration (required)
DB_USERNAME=root
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration (required) - generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_min_64_chars

# Resend Email Configuration (required)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@rivalpicksapp.com
RESEND_REPLY_TO=rivalpicks@gmail.com

# Support Email
SUPPORT_EMAIL=rivalpicks@gmail.com

# File uploads (optional)
# FILE_UPLOAD_DIR=uploads/profile-pictures

